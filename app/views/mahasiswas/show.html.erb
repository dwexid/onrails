<%= render 'navigation' %>

<div class="wrapper" id="show">

  <% if !notice.blank? %>
    <span class="notice"><%= notice %></span>
  <% end %>
  <table class="tbl">
    <tr>
      <th style="">Nim</th>
      <td>: <%= @mahasiswa.nim %></td>
    </tr>
    <tr>
      <th style="">Nama</th>
      <td>: <%= @mahasiswa.nama %></td>
    </tr>
    <tr>
      <th style="">Alamat</th>
      <td>: <%= @mahasiswa.alamat %></td>
    </tr>
    <tr>
      <th style="">Jurusan</th>
      <td>: <%= @mahasiswa.jurusan %></td>
    </tr>
    <tr>
      <th style="">Angkatan</th>
      <td>: <%= @mahasiswa.angkatan %></td>
    </tr>
 </table>
 <div class="clear"></div>

</div>

<div style="width:80%;margin:0 auto;margin-top:30px">
  <%= link_to 'Edit', edit_mahasiswa_path(@mahasiswa), class: 'tmbl tmbl-blue tmbl-md' %> 
  <%= link_to 'Back', mahasiswas_path, class: 'tmbl tmbl-green tmbl-md back' %>
</div>